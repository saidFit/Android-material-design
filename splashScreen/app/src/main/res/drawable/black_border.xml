<!-- circular_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Circle (Outer Border) -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Change to your desired background color -->
            <stroke

                android:width="1dp"
                android:color="@color/gray_500"
                />
            <corners android:radius="5dp"/>
        </shape>
    </item>


</layer-list>
